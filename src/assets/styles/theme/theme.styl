body
  height 100%
  color white
  font-family 'Roboto', sans-serif
  background-color $greyTabBackground


.app-container
  display grid
  grid-template-columns 250px 1fr
  height 100%

.side-menu-container
  width 250px
  height 100%
  vertical-align top
  color $greyText
  background-color $greyMenuBackground

.tab-container
  height 100%
  vertical-align top
  text-align center
  background-color $greyTabBackground
  box-sizing border-box
  padding 40px

.chart-container
  font-size .8em
  background-color $greyChartBackground
  margin 0 0 10px 0

.bar-chart
  height 425px
  width 600px

.pie-chart
  height 270px
  width 300px
  margin 0 0 0 40px

h3
  font-size 1.3em
  font-weight 400
  padding 20px 0 10px 20px
  border-bottom 1px solid $greyTabBackground
  margin 0 0 10px 0

h4
  color white
  font-size 1em
  font-weight 400
  text-transform uppercase
  text-align center
  text-indent -80px
  padding 0 0 20px 0
  margin 0
