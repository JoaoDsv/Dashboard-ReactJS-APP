.user-profile-container
  height 200px
  width 100%
  text-align center
  padding 20px 0 30px 0

.fdj-logo
  display block
  height 60px
  width 100px
  margin auto

.user-profile_picture
  display block
  height 70px
  width 70px
  background-color cyan
  border-radius 50%
  margin auto

.user-profile_name
  color white
  font-size 1.1em
  font-weight 500
  margin 10px 0 0 0

.user-profile_job
  color $greyMenuText
  font-size .8em
  font-weight 400
  text-align center
  margin 5px 0 0 0

.side-menu_icon
  vertical-align middle
  margin 8px 0 8px 40px

.side-menu_label
  position relative
  font-size .95em
  text-indent -6px
  vertical-align middle
  margin 8px 0 8px 0

.side-menu_arrow
  position absolute
  top -.4em
  right -50px
  vertical-align middle
